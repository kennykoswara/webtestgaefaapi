@{
    Layout = "~/Views/Shared/HomeTemplate.cshtml";
    ViewBag.Title = "Test - Home";
}


<div class="container-fluid">
    <div id="sendForgotPasswordEmail">
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <form id="forgotPasswordForm" method="post">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="panel-title text-center">Enter your email address</div>
                            </div>
                            <div class="panel-body text-center">
                                <div class="form-group">
                                    <input type="email" class="form-control" id="forgotEmail" name="email" placeholder="Enter your registered Email" style="min-width:100%" required />
                                </div>
                                <input type="submit" class="btn btn-primary form-control" id="submitForgotPasswordEmail" value="Send Link to Email" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

