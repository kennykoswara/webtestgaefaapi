@{
    ViewBag.Title = "WebTest - Find your booking";
    Layout = "~/Views/Shared/GaefaTemplate.cshtml";
}

@{ 
    bool transferSuccess = (ViewBag.AfterTransfer) ?? false ? true : false;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (transferSuccess)
            {
                <div class='alert alert-success' role='alert'><span class='glyphicon glyphicon-ok' aria-hidden='true'></span><span class='sr-only'>Success: </span> Confirm payment successful.</div>
            }
        </div>
    </div>
    <div class="jumbotron">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-5 col-xs-12 col-sm-12">
                    <form method="post" role="form" id="findBookingForm">
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <legend>Find your booking here by filling out the details.</legend>
                            <div class="form-group">
                                <input type="email" name="email" id="emailToFind" class="form-control" placeholder="Enter your email" maxlength="50" required/>
                            </div>
                            <div class="form-group">
                                <input type="text" name="bookingCode" id="bookingCodeToFind" class="form-control" placeholder="Enter your booking code" required minlength="5"/>
                            </div>
                        </fieldset>
                        <input type="submit" id="findBookingButton" class="btn btn-primary" value="Find my booking" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" id="showBookingPreview">
            
        </div>
    </div>
</div>


